<UserControl x:Class="AutoserviceApp.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoserviceApp.Views"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox x:Name="UserLoginInput" Width="150"/>
            <PasswordBox x:Name="UserPasswordInput" Width="150"/>
            <ComboBox x:Name="UserRoleInput" Width="150">
                <ComboBoxItem Content="Администратор"/>
                <ComboBoxItem Content="Сотрудник"/>
            </ComboBox>
            <Button Content="Добавить" Click="AddUser_Click"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Users}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Логин" DisplayMemberBinding="{Binding Login}" Width="150"/>
                    <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding Role}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
