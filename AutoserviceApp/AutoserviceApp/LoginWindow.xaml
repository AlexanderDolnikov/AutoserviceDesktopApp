<Window x:Class="AutoserviceApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoserviceApp"
        mc:Ignorable="d"
        Title="Вход в систему"
        Background="#2c4055"
        WindowStartupLocation="CenterScreen"
        Foreground="#ecf0f1"
        Height="280" Width="300"
        ResizeMode="CanMinimize" SizeToContent="Manual"
        WindowStyle="SingleBorderWindow">
    
    <StackPanel Margin="20">
        <TextBlock Text="Логин:" Margin="0, 0, 0, 3"/>
        <TextBox x:Name="LoginInput" Padding="1" Margin="0, 0, 0, 5" Text="admin"/>
        <TextBlock Text="Пароль:" Margin="0, 8, 0, 3"/>
        <PasswordBox x:Name="PasswordInput" KeyDown="PasswordInput_KeyDown" Padding="2" Password="admina"/>

        <Button Content="Войти" Click="Login_Click" Padding="7" Margin="0,25,0,0" Style="{StaticResource LoginButtonStyle}"/>
        <Button Content="Войти как сотрудник***" Click="WorkerLogin_Click" Padding="8" Margin="0,15,0,0" Style="{StaticResource LoginButtonStyle}"/>
    </StackPanel>
</Window>
